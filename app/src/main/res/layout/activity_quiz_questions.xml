<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:fillViewport="true"
        android:layout_height="match_parent"
        tools:context=".QuizQuestionsActivity" android:contentDescription="@string/app_name">
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvQuestion"
                tools:text="Question"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textSize="24sp"/>
        <ImageView
                android:id="@+id/ivImage"
                tools:src="@drawable/ic_launcher_background"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ProgressBar
                    android:id="@+id/pb"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    style="?android:progressBarStyleHorizontal"
                    android:max="4"
                    android:minHeight="50dp"
                    android:progress="0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="0/4"
                    android:id="@+id/tvProgress"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:id="@+id/tvOptonOne"
                android:background="@color/gray"
                android:text="Option One"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvOptonTwo"
                android:background="@color/gray"
                android:text="Option Two"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvOptonThree"
                android:background="@color/gray"
                android:text="Option Three"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvOptonFour"
                android:background="@color/gray"
                android:text="Option Four"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btnSubmit"
                android:layout_margin="8dp"
                android:text="SUBMIT"
                android:layout_width="match_parent"
                android:layout_height="64dp"/>
    </LinearLayout>
</ScrollView>